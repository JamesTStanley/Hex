<Window x:Class="WpfDisplaySample.HexControlSample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:HexControl="clr-namespace:HexControlWpf;assembly=HexControlWpf"
        Title="HexControlSample" Height="300" Width="300">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <HexControl:HexControl Grid.Row="0" Orientation="FlatTopped" VertexRadius="{Binding Value, ElementName=Slider}" HorizontalAlignment="Center" VerticalAlignment="Center" Background="Red"/>
        <Slider x:Name="Slider" Grid.Row="1" Minimum="1" Maximum="100" Value="50" VerticalAlignment="Bottom" Width="100"/>
    </Grid>
</Window>
